{
    "name": "cuppet-project",
    "version": "1.0.0",
    "description": "Your project using Cuppet testing framework",
    "main": "cucumber.js",
    "scripts": {
        "debug": "cucumber-js -f @cucumber/pretty-formatter",
        "test": "cucumber-js",
        "postinstall": "sh ./post-install.sh",
        "lint:check": "eslint . --ext .js,.mjs",
        "format:check": "prettier --check \"**/*.{js,mjs,json,md}\"",
        "verify": "yarn lint:check && yarn format:check",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "Your Name",
    "license": "ISC",
    "dependencies": {
        "@cuppet/core": "^1.0.8",
        "@cucumber/cucumber": "^11.0.0",
        "config": "^3.3.9"
    },
    "devDependencies": {
        "@cucumber/messages": "*",
        "@cucumber/pretty-formatter": "^1.0.0",
        "eslint": "^9.29.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.27.0",
        "@types/vscode": "^1.100.0",
        "husky": "^9.1.7",
        "prettier": "3.5.3"
    },
    "lint-staged": {
        "*.{js,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": "prettier --write"
    }
}
