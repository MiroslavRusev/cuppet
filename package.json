{
    "name": "cuppet-project",
    "version": "1.0.0",
    "description": "A comprehensive end-to-end testing tool using the Cuppet framework based on Cucumber.js,Puppeteer and Appium, supporting web and mobile automation.",
    "main": "cucumber.js",
    "scripts": {
        "verbose": "cucumber-js -f @cucumber/pretty-formatter",
        "test": "cucumber-js",
        "postinstall": "node ./post-install.js",
        "lint:check": "eslint .",
        "format:check": "prettier --check .",
        "format": "eslint . --fix && prettier --write .",
        "verify": "yarn lint:check && yarn format:check",
        "prepare": "husky",
        "lint-staged": "lint-staged"
    },
    "keywords": [
        "testing",
        "automation",
        "cucumber",
        "cuppet",
        "e2e",
        "bdd",
        "appium",
        "selenium",
        "gherkin"
    ],
    "author": "mrusev",
    "license": "Apache-2.0",
    "dependencies": {
        "@cuppet/core": "^1.2.0",
        "@cucumber/cucumber": "^12.0.0",
        "config": "^4.1.0"
    },
    "devDependencies": {
        "@cucumber/messages": "*",
        "@cucumber/pretty-formatter": "^2.1.0",
        "eslint": "^9.29.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.27.0",
        "@types/vscode": "^1.100.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.0",
        "prettier": "3.5.3"
    },
    "lint-staged": {
        "*.{js,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": "prettier --write"
    }
}
